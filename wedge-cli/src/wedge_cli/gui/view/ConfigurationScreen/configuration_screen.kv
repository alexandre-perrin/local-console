#:import res_path wedge_cli.gui.config.resource_path
#:include res_path(components.kv)

<ConfigurationScreenView>
    md_bg_color: self.theme_cls.backgroundColor
    image_dir_picker: image_pick
    inference_dir_picker: inference_pick

    MDBoxLayout:
        orientation: "vertical"

        MDBoxLayout:
        # Top bar

            orientation: "horizontal"
            size_hint_y: 0.1

            MDBoxLayout:
            # Controls half
                orientation: "horizontal"
                padding: "10dp"
                spacing: "10dp"

                GoHomeButton:

                MDWidget:
                    size_hint_x: 3

        MDBoxLayout:
        # Configuration controls

            orientation: "vertical"
            padding: "15dp"
            spacing: "10dp"
            size_hint_y: 0.6

            PathSelectorCombo:
            # Image dir
                id: image_pick
                name: 'Image dir:'
                icon: "folder-cog"
                path: app.image_dir_path

            FileSizeCombo:
                id: images_size_control
                label: "Max total size in image dir:"
                on_value: root.controller.update_image_max_size(args[1])

            PathSelectorCombo:
            # Inference dir
                id: inference_pick
                name: 'Inference dir:'
                icon: "folder-cog"
                path: app.inference_dir_path

            FileSizeCombo:
                id: inference_size_control
                label: "Max total size in inference folder:"
                on_value: root.controller.update_inference_max_size(args[1])

            MDBoxLayout:
            # Schema
                orientation: "horizontal"
                spacing: "5dp"

                PathSelectorCombo:
                    id: schema_pick
                    name: 'Schema:'
                    icon: "folder-cog"

                MDButton:
                    id: btn_process_schema
                    on_release: root.controller.process_schema()
                    pos_hint: {"center_y": 0.5}

                    MDButtonText:
                        text: " Process \n schema "

        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.3
