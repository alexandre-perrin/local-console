<HomeScreenView>
    md_bg_color: self.theme_cls.backgroundColor

    MDBoxLayout:
        orientation: "horizontal"
        adaptive_height: False
        padding: "20dp"
        spacing: "10dp"

        MDBoxLayout:
            orientation: "vertical"
            spacing: "10dp"
            size_hint_x: 1
            adaptive_height: False

            MDExtendedFabButton:
                size_hint_x: .7
                fab_state: "expand"
                valign: "center"
                on_press: root.manager.current = 'connection screen'
                MDExtendedFabButtonIcon:
                    icon: "access-point-network"
                MDExtendedFabButtonText:
                    text: "Connection"

            MDExtendedFabButton:
                size_hint_x: .7
                fab_state: "expand"
                valign: "center"
                on_press: root.manager.current = 'configuration screen'
                MDExtendedFabButtonIcon:
                    icon: "folder-cog-outline"
                MDExtendedFabButtonText:
                    text: "Configuration"

            MDExtendedFabButton:
                size_hint_x: .7
                fab_state: "expand"
                valign: "center"
                on_press: root.manager.current = 'streaming screen'
                MDExtendedFabButtonIcon:
                    icon: "animation-play"
                MDExtendedFabButtonText:
                    text: "Streaming"

            MDExtendedFabButton:
                size_hint_x: .7
                fab_state: "expand"
                valign: "center"
                on_press: root.manager.current = 'inference screen'
                MDExtendedFabButtonIcon:
                    icon: "lightbulb-on-outline"
                MDExtendedFabButtonText:
                    text: "Inference"

            MDExtendedFabButton:
                size_hint_x: .7
                fab_state: "expand"
                valign: "center"
                on_press: root.manager.current = 'applications screen'
                MDExtendedFabButtonIcon:
                    icon: "application-cog"
                MDExtendedFabButtonText:
                    text: "Applications"

            MDExtendedFabButton:
                size_hint_x: .7
                fab_state: "expand"
                valign: "center"
                on_press: root.manager.current = 'ai model screen'
                MDExtendedFabButtonIcon:
                    icon: "dice-multiple"
                MDExtendedFabButtonText:
                    text: "AI Model"

            MDExtendedFabButton:
                size_hint_x: .7
                fab_state: "expand"
                valign: "center"
                on_press: root.manager.current = 'firmware screen'
                MDExtendedFabButtonIcon:
                    icon: "cog-clockwise"
                MDExtendedFabButtonText:
                    text: "Firmware"

            MDExtendedFabButton:
                size_hint_x: .7
                fab_state: "expand"
                valign: "center"
                on_press: root.manager.current = 'devices screen'
                MDExtendedFabButtonIcon:
                    icon: "camera"
                MDExtendedFabButtonText:
                    text: "Devices"

            MDWidget:

            MDLabel:
                text: root.version_number
                size_hint_y: 0.1
                padding: "10dp"
                halign: "left"

        MDBoxLayout:
            orientation: "vertical"
            adaptive_height: False
            size_hint_x: 2

            MDGridLayout:
                cols: 2
                adaptive_height: True

                EntryLabel:
                    text: "Device:"
                    halign: "right"
                    bold: True

                DeviceDropDownList:
                    size_hint_x: .5
                    size_hint_y: .05
                    halign:"right"
                    on_selected: app.driver.device_manager.set_active_device(args[1]); app.switch_proxy();
                    padding: "20dp", "35dp"
                    _selected_device: app.selected
                    canvas.before:
                        Color:
                            rgba: 0, 0, 0, 1
                        Line:
                            width: 1.0
                            rounded_rectangle: self.x, self.y+35, self.width, self.height/3, 4


            MDBoxLayout:
                size_hint_y: 0.9
                orientation: "vertical"

                MDWidget:
                    size_hint_y: 0.4

                MDBoxLayout:
                    orientation: "horizontal"

                    MDWidget:
                        size_hint_x: 0.4

                    MDGridLayout:
                        cols: 2
                        adaptive_height: True

                        EntryLabel:
                            text: "Firmware"
                            halign: "left"
                            bold: True
                        MDWidget:

                        EntryLabel:
                            text: "Sensor FW Version:"
                            halign: "left"
                        EntryLabel:
                            id: txt_sensor_fw_ver
                            text: ""
                            halign: "left"
                            allow_copy: True
                            allow_selection: True

                        EntryLabel:
                            text: "Sensor Loader Version:"
                            halign: "left"
                        EntryLabel:
                            id: txt_sensor_loader_ver
                            text: ""
                            halign: "left"
                            allow_copy: True
                            allow_selection: True

                        EntryLabel:
                            text: "App FW Version:"
                            halign: "left"
                        EntryLabel:
                            id: txt_app_fw_ver
                            text: ""
                            halign: "left"
                            allow_copy: True
                            allow_selection: True

                        EntryLabel:
                            text: "App Loader Version:"
                            halign: "left"
                        EntryLabel:
                            id: txt_app_loader_ver
                            text: ""
                            halign: "left"
                            allow_copy: True
                            allow_selection: True

                MDWidget:
                    size_hint_y: 0.2
