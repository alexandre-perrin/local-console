#:import GoHomeButton local_console.gui.view.common.components.GoHomeButton

<AIModelScreenView>
    md_bg_color: self.theme_cls.backgroundColor

    MDBoxLayout:
        orientation: "vertical"

        MDBoxLayout:
        # Top bar
            orientation: "horizontal"
            size_hint_y: 0.1

            MDBoxLayout:
            # Controls half
                orientation: "horizontal"
                spacing: "10dp"
                padding: "10dp"

                GoHomeButton:

                MDWidget:
                    size_hint_x: 3

                EntryLabel:
                    text: "Device:"
                    halign: "right"
                    bold: True
                MDLabel:
                    text: app.selected
                    padding: "20dp", "0dp"
                    halign:"right"
                    canvas.before:
                        Color:
                            rgba: 0, 0, 0, 1
                        Line:
                            width: 1.1
                            rounded_rectangle: self.x, self.y + 5, self.width, self.height -10, 5, 5, 5, 5

        MDBoxLayout:
        # Model setup controls
            orientation: "horizontal"
            size_hint_y: 0.1

            MDBoxLayout:
                orientation: "horizontal"
                spacing: "10dp"
                padding: "10dp"

                PathSelectorCombo:
                    id: model_pick
                    name: 'Model location:'
                    icon: "file-cog"
                    selector: "file"
                    path: app.mdl.ai_model_file
                    on_selected: app.mdl.ai_model_file = args[1]

                MDButton:
                    id: btn_ota_file
                    on_release: if not self.disabled: root.controller.deploy()
                    pos_hint: {"center_y": 0.5}
                    disabled: not (app.mdl.is_ready and app.mdl.ai_model_file_valid and root.update_status_finished)
                    MDButtonText:
                        text: "Deploy"

        MDLabel:
            text: "Neural Model Update Status"
            halign: "center"
            font_style: 'Title'
            adaptive_height: True
            padding: 0, "10dp"

        MDBoxLayout:
        # Readout block
            orientation: "horizontal"
            size_hint_y: 0.8
            spacing: "10dp"
            padding: "20dp"

            CodeInputCustom:
                id: txt_ota_data
                size_hint_x: 0.7

            MDBoxLayout:
                orientation: "vertical"
                size_hint_x: 0.25

                MDLabel:
                    id: lbl_ota_status
                    text: "N/A"
                    font_style: 'Body'
                    halign: 'center'

                MDWidget:
